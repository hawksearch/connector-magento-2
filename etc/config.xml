<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <hawksearch_connector>
            <api_settings>
                <environment>develop</environment>
                <!-- LU Search API -->
                <hawk_url>
                    <develop>https://dev.hawksearch.net/</develop>
                    <staging>https://test.hawksearch.net/</staging>
                    <production>https://lusearchapi-na.hawksearch.com/</production>
                </hawk_url>
                <!-- Tracking API  -->
                <tracking_url>
                    <develop>https://tracking-dev.hawksearch.net/</develop>
                    <staging>https://tracking-test.hawksearch.net/</staging>
                    <production>https://tracking-na.hawksearch.com/</production>
                </tracking_url>
                <!-- Recommendation API -->
                <recommendations_url>
                    <develop>https://recs-dev.hawksearch.net/</develop>
                    <staging>https://recs-test.hawksearch.net/</staging>
                    <production>https://recs-na.hawksearch.com/</production>
                </recommendations_url>
                <!-- Dashboard API -->
                <dashboard_api_url>
                    <develop>https://dev.hawksearch.net/</develop>
                    <staging>https://test.hawksearch.net/</staging>
                    <production>https://adminapi-na.hawksearch.com/</production>
                </dashboard_api_url>
                <!-- Hawksearch Workbench -->
                <hawksearch_workbench_url>
                    <develop>https://dev.hawksearch.net/</develop>
                    <staging>https://test.hawksearch.net/</staging>
                    <production>https://dashboard-na.hawksearch.com/</production>
                </hawksearch_workbench_url>
                <!-- Indexing API -->
                <indexing_api_url>
                    <develop>https://indexing-dev.hawksearch.net/</develop>
                    <staging>https://indexing-test.hawksearch.net/</staging>
                    <production>https://indexingapi-na.hawksearch.com/</production>
                </indexing_api_url>
                <!-- ES Search API -->
                <search_api_url>
                    <develop>https://searchapi-dev.hawksearch.net/</develop>
                    <staging>https://searchapi-test.hawksearch.net/</staging>
                    <production>https://essearchapi-na.hawksearch.com/</production>
                </search_api_url>
            </api_settings>
            <logger>
                <enabled>0</enabled>
            </logger>
        </hawksearch_connector>
    </default>
</config>
